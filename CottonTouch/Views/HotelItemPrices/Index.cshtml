@model IEnumerable<CottonTouch.HotelItemPrice>

@{
    ViewBag.Title = "Index";}


<style>

    .fa {
        display: inline-block;
        font: normal normal normal 14px/1.5 FontAwesome !important;
        font-size: inherit;
        text-rendering: auto;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
</style>

<br />

<div class="box box-primary">

    <div class="box-header with-border">
        <h3 class="box-title"><i class="fa fa-list-alt"></i> <span>Laundry Item Pricing List per Hotel </span></h3>
        <div class="box-tools pull-right">
        </div>

    </div>
    <!-- /.box-tools -->
    <!-- /.box-header -->
    @using (Html.BeginForm())
    {
        <div class="text-left">
            @Html.ActionLink("Add New", "Create", "HotelItemPrices", null, new { @class = "btn btn-success" })

            @*<button type="submit" id="btn-export-excel" class="btn btn-success btn-sm">Export To Excel</button>*@


        </div>


        <div class="box-body no-padding">

            <div class="mailbox-controls">
                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <table id="demoGrid" class="table table-striped table-bordered dt-responsive " width="100%" cellspacing="0">

                        <thead>


                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Hotel.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Item.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PricePerItem)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VATPercent)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VATAmount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DiscAmount)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hotel.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PricePerItem)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VATPercent)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VATAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiscAmount)
                                </td>

                                <td>
                                    <div class="tools" style="width:100px">

                                        <a class="btn btn-primary btn-xs" href="@Url.Action("Edit", "HotelItemPrices", new { id = item.HIPID })"><i class="fa fa-pencil"></i></a>
                                        <a class="btn btn-primary btn-xs" href="@Url.Action("Details", "HotelItemPrices", new { id = item.HIPID })"><i class="fa fa-list"></i></a>
                                        <a class="btn btn-danger btn-xs" href="@Url.Action("Delete", "HotelItemPrices", new { id = item.HIPID })"><i class="fa fa-trash"></i></a>



                                    </div>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>





                </div>

                <!-- /.table -->
            </div>
            <!-- /.mail-box-messages -->
        </div>

    }
</div>

<div class="box-footer no-padding">

</div>



<script type="text/javascript">



    $('#demoGrid').DataTable({
        "paging": true,
        "pageLength": 10,
        "pagingType": "full_numbers",
        "scrollX": true,



    });






</script>


































