    $(function () {
        $("#from").datepicker();
    });
     $(function () {
        $("#to").datepicker();
    });

  

    function gotoinvoice() {
        var fromdate = document.getElementById("from").value;
        var todate = document.getElementById("to").value;
        var hotelid = document.getElementById("HotelID").value;
     todate = todate.replace(/\//g, ",");
        fromdate = fromdate.replace(/\//g, ",");



              $('.invoices').attr('href', 'http://localhost/CottonTouch/ServiceRequests/DeliveryNoteInvoice?from='+fromdate+'&to='+todate+'&hotelid='+hotelid);


    }

       $('#demoGrid').DataTable({
        "paging": true,
        "pageLength": 50,
        "pagingType": "full_numbers",
           "scrollX": true,    
        "paging": true,
        "searching": true

    });

</script>

